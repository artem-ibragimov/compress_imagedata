{
   "version": "0.2.0",
   "configurations": [
      {
         "type": "node",
         "request": "launch",
         "name": "Jest watch current file",
         "program": "${workspaceFolder}/node_modules/jest/bin/jest",
         "cwd": "${workspaceFolder}",
         "args": [
            "${fileBasename}",
            "--verbose",
            "-i",
            "--no-cache",
            "--watchAll"
         ],
         "console": "integratedTerminal",
         "internalConsoleOptions": "neverOpen"
      }
   ]
}